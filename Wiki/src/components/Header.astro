---
// @ts-nocheck
import Navigation from '../components/Navigation.astro'
import NavItem from './NavItem.astro'
import { SkipLinks } from 'accessible-astro-components'

const routes = [
  { 
    name: 'Home', 
    url: '/',
  },
  { 
    name: 'About', 
    url: '/about' 
  },
  { 
    name: 'Contact',
    url: '/contact' 
  },
  { 
    title: 'Go to our GitHub organization',
    url: 'https://github.com/Safe-Corp-Jiva', 
    icon: 'ion:logo-github'
  }
]
---

<header>
  <SkipLinks />
  <Navigation>
    { routes.map(route => (
      <NavItem {...route} />
    ))}
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [data-icon] {
        height: auto;
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
        }
      }

      &:hover {
        [data-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
